@model List<BiblioRepo.Web.Models.Category>

@{
    ViewData["Title"] = "Categories";
}



<div class="text-center mt-3 ">
    <h1>All categories</h1>
</div>
<!-- Button trigger modal -->
<a  class="btn btn-primary" asp-controller="Category" asp-action="Create">
    Create new category
</a>

<table class="table mt-3 ">
    <thead>
        <tr class="table-primary">
            <th>Id</th>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var serialnumber = 1;
        }
        @foreach(var category in Model)
        {
            <tr>
                <td>@serialnumber</td>
                <td>@category.Title</td>
                <td>
                    <form method="post">
                    <a class="btn btn-outline-primary" asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <button  class="btn btn-danger m-sm-2" asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id"><i class="bi bi-trash3"></i> Delete</button>
                    </form>
                </td>
            </tr>
            serialnumber++;
        }
    </tbody>
</table>
