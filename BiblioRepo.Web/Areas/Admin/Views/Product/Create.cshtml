@model BiblioRepo.Web.Models.Product

<div class="text-center mt-3 ">
    <h1>Add new product</h1>
</div>


<form class="row g-3 mt-3" method="post" enctype="multipart/form-data">
    <div class="col-md-4">
        <label asp-for="Name" class="form-label"></label>
        <input class="form-control" asp-for="Name"  />
    </div>
    <div class="col-md-4">
        <label asp-for="Author" class="form-label"></label>
        <input class="form-control" asp-for="Author"  />
    </div>
    <div class="col-md-4">
        <label asp-for="ISBN" class="form-label"></label>
        <input class="form-control" asp-for="ISBN"  />
    </div>
    <div class="col-md-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input class="form-control" asp-for="Quantity"  />
    </div>
    <div class="col-md-3">
        <label asp-for="Price" class="form-label"></label>
        <input class="form-control" asp-for="Price" />
    </div>
    <div class="col-md-3">
        <label asp-for="DiscountRate" class="form-label"></label>
        <input class="form-control" asp-for="DiscountRate" />
    </div>
    <div class="col-12">
        <label asp-for="Description" class="form-label"></label>
        <textarea class="form-control" asp-for="Description" >
        </textarea>
    </div>
    <div class="col-md-3">
        <label asp-for="Category.Title" class="form-label"></label>
        <select class="form-control" asp-for="CategoryId">
            <option selected disabled>--select category--</option>
            @if (ViewBag.Categories != null)
            {
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Title</option>
                }
            }
        </select>
    </div>
    <div class="col-md-9">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" type="file" name="file" class="form-control border-0 shadow" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Save product</button>
        <a class="btn btn-secondary" asp-area="Admin" asp-controller="Product" asp-action="Index">Back</a>
    </div>
</form>
